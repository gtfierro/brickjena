  <body>
    <div class="container">
      <h1>Brick Query</h1>
      <div class="row">
          <div class="col-md-4">
              <h4>Application Queries</h4>
              <ul class="list-group">
              {{range .Queries}}
                <a href="#" id="{{.Name}}" onclick="loadQuery({{.Body}})" class="list-group-item">{{.Name}}</a>
              {{end}}
              </ul>
          </div>
          <div class="col-md-8">
            <form action="/query" method="post" id="queryform">
                <label>Query: </label> <br /> <br />
                <textarea class="form-control" id="querytext" style="font-family:monospace;"  rows="20" cols="30" name="query" placeholder="type query here"></textarea>
                <br /> <br />
                <input type="hidden" name="token" value="{{.Token}}" /> <br />
                <label>Building: </label>
                <select name="building" class="form-control">
                    <option value="SodaHall">Soda Hall</option>
                    <option value="RiceHall">Rice Hall</option>
                    <option value="EBU3B">Engineering Bldg 3B</option>
                    <option value="Gates">Gates Hall</option>
                    <option value="GreenTechCenter">Green Tech Center</option>
                </select>
                <button class="btn btn-primary" type="submit">Query</button>
            </form>
          </div>
      </div>
      <div class="row">
          <h4>Application Results</h4>
          <table class="table table-condensed table-hover">
            <tbody>
              {{range .Results}}
              <tr>
                {{range .}}
                    <td> {{.Value}} </td>
                {{end}}
              </tr>
              {{end}}
            </tbody>
          </table>
      </div>
    </div>
  </body>
